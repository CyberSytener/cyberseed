{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cyberseed",
  "version": "0.1.0",
  "identifier": "com.cyberseed.app",

  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Cyberseed",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../../backend/**/*"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "compression": "lzma",
        "startMenuFolder": "Cyberseed"
      }
    }
  }
}